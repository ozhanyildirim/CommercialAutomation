@model TicariOtomasyon.Models.Class.Product
@{
    ViewBag.Title = "GetProduct";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Ürün Düzenleme</h2>

<hr />

@using(Html.BeginForm("EditProduct","Product",FormMethod.Post))
{
    @Html.HiddenFor(x => x.ProductID)
    <label>Ürün Adı</label>
    @Html.TextBoxFor(x => x.ProductName, new { @class = "form-control" })
    <label>Marka</label>
    @Html.TextBoxFor(x => x.ProductBrand, new { @class = "form-control" })
    <label>Stok</label>
    @Html.TextBoxFor(x => x.ProductStock, new { @class = "form-control" })
    <label>Alış Fiyat</label>
    @Html.TextBoxFor(x => x.PurchasePrice, new { @class = "form-control" })
    <label>Satış Fiyat</label>
    @Html.TextBoxFor(x => x.SalePrice, new { @class = "form-control" })
    <label>Kategori</label>
    @Html.DropDownListFor(x => x.CategoriesID, (List<SelectListItem>)ViewBag.val1, new { @class = "form-control" })
    <label>Görsel</label>
    @Html.TextBoxFor(x => x.ProductImage, new { @class = "form-control" })
    <label>Durum</label>
    @Html.TextBoxFor(x => x.Status, new { @class = "form-control" })




    <button class="btn btn-outline-warning" style="margin-top:15px">Ürün Güncelle</button>
}
