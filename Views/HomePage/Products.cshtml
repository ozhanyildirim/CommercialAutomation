    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css" integrity="sha384-9gVQ4dYFwwWSjIDZnLEWnxCjeSWFphJiwGPXr1jddIhOegiu1FwO5qRGvFXOdJZ4" crossorigin="anonymous">
    <!-- Our Custom CSS -->
    <!-- Font Awesome JS -->
    <script defer src="https://use.fontawesome.com/releases/v5.0.13/js/solid.js" integrity="sha384-tzzSw1/Vo+0N5UhStP3bvwWPq+uvzCMfrN1fEFe+xBmv1C/AtVX5K0uZtmcHitFZ" crossorigin="anonymous"></script>
    <script defer src="https://use.fontawesome.com/releases/v5.0.13/js/fontawesome.js" integrity="sha384-6OIrr52G08NpOFSZdxxz1xdNSndlD4vdcf/q2myIUVO0VsqaGHJsB0RaBE01VTOY" crossorigin="anonymous"></script>

    <!-- bootstrap core css -->
    <link rel="stylesheet" type="text/css" href="~/WebLayout/default page/css/bootstrap.css" />
    <!--owl slider stylesheet -->
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css" />

    <!-- font awesome style -->
    <link href="~/WebLayout/default page/css/font-awesome.min.css" rel="stylesheet" />

    <!-- Custom styles for this template -->
    <link href="~/WebLayout/default page/css/style.css" rel="stylesheet" />
    <!-- responsive style -->
    <link href="~/WebLayout/default page/css/responsive.css" rel="stylesheet" />

</head>

<body class="sub_page">

    <header class="header_section">
        <div class="container-fluid">
            <nav class="navbar navbar-expand-lg custom_nav-container ">
                <a class="navbar-brand" href="/HomePage/Index/">
                    <span>
                        <i class="fa fa-phone-square" aria-hidden="true"> </i>

                        Net Elektronik
                    </span>
                </a>

                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class=""> </span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav">
                        <li class="nav-item active">
                            <a class="nav-link" href="/HomePage/Index/">Ana Sayfa <span class="sr-only">(current)</span></a>
                        </li>


                        <li class="nav-item">
                            <div class="dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    ÜRÜNLER
                                </a>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                    <a class="dropdown-item" href="/HomePage/Products/">Cep Telefonu</a>
                                    <a class="dropdown-item" href="/HomePage/ProductsCharger">Şarj Cihazı</a>
                                    <a class="dropdown-item" href="/HomePage/ProductsHeadset">Kulaklık</a>
                                    <a class="dropdown-item" href="/HomePage/ProductsBattery">Batarya</a>
                                </div>
                            </div>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="/HomePage/AboutUs/"> hakkımızda </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/HomePage/Contact/">İLETİŞİM</a>
                        </li>
                    </ul>
                    <div class="user_option-box">
                        <a href="/Login/Index/">
                            <i class="fa fa-user" aria-hidden="true"></i>
                        </a>

                    </div>
                </div>
            </nav>
        </div>
    </header>


    <section class="shop_section layout_padding" style="background-color:whitesmoke">
        <div class="container">
            <div class="heading_container heading_center">
                <h2>
                    Cep Telefonları
                </h2>
            </div>
            <div class="row">
                <div class="col-md-6 ">
                    <div class="box">
                        <a href="" style="pointer-events: none;">
                            <div class="img-box">
                                <img src="https://productimages.hepsiburada.net/s/64/375/110000005722889.jpg" alt="">
                            </div>
                            <div class="detail-box">
                                <h6>
                                    Redmi Note 10
                                </h6>
                                <h6>
                                    Fiyat:
                                    <span>
                                        2.999 TL
                                    </span>
                                </h6>
                            </div>
                            <div class="new" style="background-color:orangered">
                                <span>
                                    Xiaomi
                                </span>
                            </div>
                        </a>
                    </div>
                </div>
                
                @foreach (var item in Model)
                {
                    if(item.ProductBrand == "Apple")
                    {
                        color = "background-color:indianred";
                    }
                    else if(item.ProductBrand == "Samsung")
                    {
                        color = "background-color:darkorchid";
                    }
                    else if(item.ProductBrand == "Xiaomi")
                    {
                        color = "background-color:orangered";
                    }
                    else if(item.ProductBrand == "Huawei")
                    {
                        color = "background-color:dodgerblue";
                    }
                    else
                    {
                        color = "background-color:#f0d43a";
                    }
                <div class="col-sm-6 col-xl-3">
                    <div class="box">
                        <a href="" style="pointer-events: none;">
                            <div class="img-box">
                                <img src="@item.ProductImage" alt="">
                            </div>
                            <div class="detail-box">
                                <h6>
                                    @item.ProductName
                                </h6>
                                <h6>
                                    Fiyat:
                                    <span>
                                        @item.SalePrice
                                    </span>
                                </h6>
                            </div>
                            <div class="new" style="@color">
                                <span>
                                    @item.ProductBrand
                                </span>
                            </div>
                        </a>
                    </div>
                </div>
                }
            </div>
               

            <div class="btn-box">
               
            </div>
        </div>
    </section>


    <footer class="footer_section" style="background-color:#000201">
        <div class="container">
            <div class="row">
                <div class="col-sm-8 ">
                    <div class="footer_detail">
                        <h4>
                            Hakkımızda
                        </h4>
                        <p>
                            1997'den beri iletişim konusunda güvenin tek adresi ...
                        </p>
                        <div class="footer_social">
                            <a href="">
                                <i class="fa fa-facebook" aria-hidden="true"></i>
                            </a>
                            <a href="">
                                <i class="fa fa-twitter" aria-hidden="true"></i>
                            </a>
                            <a href="">
                                <i class="fa fa-linkedin" aria-hidden="true"></i>
                            </a>
                            <a href="">
                                <i class="fa fa-instagram" aria-hidden="true"></i>
                            </a>
                        </div>
                    </div>
                </div>
                <div class="col-sm-4 footer-col">
                    <div class="footer_contact">
                        <h4>
                            İletişim
                        </h4>
                        <div class="contact_link_box">
                            <a href="">
                                <i class="fa fa-map-marker" aria-hidden="true"></i>
                                <span>
                                    Konum
                                </span>
                            </a>
                            <a href="">
                                <i class="fa fa-phone" aria-hidden="true"></i>
                                <span>
                                    0(232) 250 11 21
                                </span>
                            </a>
                            <a href="">
                                <i class="fa fa-envelope" aria-hidden="true"></i>
                                <span>
                                    yemenyildirim1@hotmail.com
                                </span>
                            </a>
                        </div>
                    </div>
                </div>


            </div>
            <div class="footer-info">
                <p>
                    &copy; <span id="displayYear"></span> Özhan Nuri YILDIRIM
                </p>
            </div>
        </div>
    </footer>


    <!-- footer section -->
    <!-- jQery -->
    <script src="~/WebLayout/default page/js/jquery-3.4.1.min.js"></script>
    <!-- popper js -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous">
    </script>
    <!-- bootstrap js -->
    <script src="~/WebLayout/default page/js/bootstrap.js"></script>
    <!-- owl slider -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js">
    </script>
    <!-- custom js -->
    <script src="~/WebLayout/default page/js/custom.js"></script>
    <!-- Google Map -->
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCh39n5U-4IoWpsVGUHWdqB6puEkhRLdmI&callback=myMap"></script>
    <!-- End Google Map -->

</body>

