@model List<Product>
@{
    Layout = null;
}

@{ string color = "";}

<!DOCTYPE html>

<head>
    <!-- Basic -->
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
