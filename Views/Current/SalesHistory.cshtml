@using TicariOtomasyon.Models.Class
@model List<Sales>

@{
        ViewBag.Title = "SalesHistory";
        Layout = "~/Views/Shared/_AdminLayout.cshtml";
    }

    <h2>Satış Geçmişi</h2>

    <hr />


    <h3>@ViewBag.dp</h3>
    @*departman adının Viewbagle taşınması*@


    <table class="table table-bordered" style="margin-top:20px;  margin-right:20px;">
        <tr>
            <th>Ürün</th>
            <th>Personel</th>

            <th>Adet</th>
            <th>Fiyat</th>

            <th>Toplam</th>
            <th>Tarih</th>
            <th>Yazdır</th>
        </tr>
        @foreach (var item in Model)
        {
    <tr>
        <td>@item.Products.ProductName</td>
        <td>@item.Employees.EmployeeName @item.Employees.EmployeeSurname</td>
        <td>@item.Piece</td>
        <td>@item.Price</td>
        <td>@item.TotalPrice</td>
        <td>@item.Date</td>

        <td><a href="#" class="btn btn-default" style="background-color:darkslategrey; color:white"> Yazdır </a></td>
    </tr>
        }

    </table>

