@model TicariOtomasyon.Models.Class.Current

@{
    ViewBag.Title = "AddCurrent";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Cari Ekleme Sayfası</h2>

<hr />
<br />

<form class="form-group" method="post">
    <label>Cari Ad</label>
    @Html.TextBoxFor(x => x.CurrentName , new { @class = "form-control" })  
    <br />
    <label>Cari Soyad</label>
    @Html.TextBoxFor(x => x.CurrentSurname, new { @class = "form-control" })
    <br />
    <label>Cari Şehir</label>
    @Html.TextBoxFor(x => x.CurrentCity, new { @class = "form-control" })
    <br />
    <label>Cari Mail</label>
    @Html.TextBoxFor(x => x.CurrentMail, new { @class = "form-control" })
    <br />
    <button class="btn btn-primary" style="margin-top:15px">Cari Ekle</button>
</form>

